<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Original Title:"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_original_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:text="Tales by moonlight" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Runtime:"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/m_original_Title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_runtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="@+id/m_original_Title"
        app:layout_constraintStart_toStartOf="@+id/m_original_Title"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:text="141 minutes" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Status:"
        android:textColor="@color/colorAccentDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/m_runtime" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="@+id/m_runtime"
        app:layout_constraintStart_toStartOf="@+id/m_runtime"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:text="Released" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Release Date:"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/m_status" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="@+id/m_status"
        app:layout_constraintStart_toStartOf="@+id/m_status"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        tools:text="@tools:sample/date/ddmmyy" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Vote Count:"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@id/m_release_date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_vote_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="@id/m_release_date"
        app:layout_constraintStart_toStartOf="@id/m_release_date"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        tools:text="324" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Tag Line:"
        android:textColor="@color/colorAccentDark"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@id/m_vote_count" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_tag_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccentLight"
        app:layout_constraintEnd_toEndOf="@id/m_vote_count"
        app:layout_constraintStart_toStartOf="@id/m_vote_count"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        tools:text="The end of the beginning" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="HomePage:"
        android:textColor="@color/colorAccentDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/m_tag_line" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_homepage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/m_tag_line"
        app:layout_constraintStart_toStartOf="@+id/m_tag_line"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        tools:text="http://www.cwtv.com/shows/the-flash/" />

</androidx.constraintlayout.widget.ConstraintLayout>